function isPalindrome(str){
  for (let i = 0; i< str.length / 2; i++){              // the loop will only go to half of the string
    console.log(str[i])                                 // check which characters the loop checks
    if (str[i] !== str[str.length - 1 - i]) {           // mirror element of str[i] is str[str.length - 1 - i]
      return false  
    }
  }
  return true;
}

console.log(isPalindrome('obiyyibo'))
